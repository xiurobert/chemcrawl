{% endblock %}

{% block js %}
    <script>
        $("#rxnType").change(function () {
            if (!["add", "sub"].includes($("#rxnType").val())) {
                $("#rsubType").hide();
            } else {
                $("#rsubType").show();
            }
        })
    </script>
    <script>
        function clone(idOfInputToClone) {
            let $da_thing = $(`input[id^=${idOfInputToClone}]:last`);
            let num = parseInt($da_thing.prop("id").match(/\d+/g), 10) +1;
            let $clone = $da_thing.clone().prop('id', `${idOfInputToClone}-${num}`);
            $clone.prop('name', `${idOfInputToClone}-${num}`)
            $da_thing.after($clone);
        }

        function delLast(divContainingListOfInputs) {
            $(`${divContainingListOfInputs} input`).last().remove();
        }



        // $.ajax('/admin/addrxn', {

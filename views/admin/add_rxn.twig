{% endblock %}

{% block main %}
    <form class="container" action="/admin/addrxn" method="post">
        <div class="row">
            <div class="col text-center">
                <h1 class="mt-5">Add Reaction</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="rxnName" class="form-label">Reaction Name</label>
                <input type="text" class="form-control" id="rxnName" name="rxnName" placeholder="Reaction name">
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <label for="rxnType" class="form-label">Reaction Type</label>
                <select class="form-select" id="rxnType" name="rxnType">
                    <option value="add">Addition</option>
                    <option value="sub">Substitution</option>
                    <option value="eli">Elimination</option>
                    <option value="hyd">Hydrolysis</option>
                    <option value="con">Condensation</option>
                    <option value="oxi">Oxidation</option>
                    <option value="red">Reduction</option>
                    <option value="rea">Rearrangement</option>
                </select>
                <div id="rsubType">
                    <label for="rxnSubType">
                        Reaction Sub type
                    </label>
                    <select class="form-select" id="rxnSubType" name="rxnSubType">
                        <option value="nu">Nucleophilic</option>
                        <option value="ep">Electrophilic</option>
                    </select>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="needsMechanism" name="rxnNeedsMech">
                    <label class="form-check-label" for="needsMechanism">
                        Needs mechanism
                    </label>
                </div>
            </div>
            <div class="col-sm">
                <div class="row">
                    <div class="col-md-8 text-center align-self-center">
                        <label for="rxnReagents-0" class="form-label">Reaction Reagents</label>
                    </div>
                    <div class="col-md-4 p-3 text-center">
                        <div class="btn-group" role="group">
                            <button class="btn btn-{{ mode }}" type="button" onclick="clone('rxnReagent')">+</button>
                            <button class="btn btn-{{ mode }}" type="button" onclick="delLast('reagentsList')">-</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col" id="reagentsList">
                        <input type="text" class="form-control mb-2" id="rxnReagents-0" name="rxnReagents-0"
                               placeholder="Reaction reagent">
                    </div>
                </div>

            </div>
            <div class="col-sm">
                <div class="row">
                    <div class="col-md-8 text-center align-self-center">
                        <label for="rxnConditions-0" class="form-label">Reaction Conditions</label>
                    </div>
                    <div class="col-md-4 p-3 text-center">
                        <div class="btn-group" role="group">
                            <button class="btn btn-{{ mode }}" type="button" onclick="clone()">+</button>
                            <button class="btn btn-{{ mode }}" type="button" onclick="deleteLastCondition()">-</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col" id="conditionsList">
                        <input type="text" class="form-control mb-2" id="rxnConditions-0" name="rxnConditions-0"
                               placeholder="Reaction condition">
                    </div>
                </div>

            </div>
        </div>
